{% extends "layout.njk" %}

    {% block head %}
        <title> Students </title>
    {% endblock %}

{% block content %}
    <div class="card">
    <section 
    class="avatar" 
    style="background: url({{ student.avatar_url }}) no-repeat center center/ cover"></section>

    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome</div>
            <div>{{student.name}}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{student.age}}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{student.email}}</div>
        </div>

        <div class="item">
            <div>Ano Escolar</div>
            <div>{{student.school_year}}</div>
        </div>

        <div class="item">
            <div>Carga Hor√°ria</div>
            <div>{{student.workload}}</div>
        </div>

        <div class="item">
            <div>Aluno de</div>
            <div>{{student.teacher_name}}</div>
        </div>

        <a class="button" href="/students/{{student.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}