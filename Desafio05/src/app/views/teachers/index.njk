{% extends "layout.njk" %}

    {% block head %}
        <title> Teachers </title>
    {% endblock %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/teachers/create"> Criar Novo </a>
            <form action="/teachers" method="GET">
                <input 
                type="text"
                name="filter"
                placeholder="Nome ou Atendimento" 
                value={{filter}}               
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Atendimento</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>{{teacher.services}}</td>
                        <td>{{teacher.total_students}}</td>
                        <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
    </div>

{% endblock content %}